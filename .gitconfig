[core]
	editor = 'code' --wait
	excludesfile = /Users/michaellandry/.gitignore_global
	autocrlf = input
[checkout]
	defaultRemote = upstream
[push]
	default = current
[user]
	name = michael.landry
	email = michael.landry@pps.io
[help]
	autocorrect = 1
[color]
	ui = true
    branch = auto
    diff = auto
    status = auto
 [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
	changed = yellow bold
	untracked = cyan bold
	added = green bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[alias]
	dt = difftool
	lga = log --graph --oneline --all --decorate
[difftool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[http]
	sslVerify = false
[branch]
	autosetuprebase = never
	autosetupmerge = false
[rerere]
	enabled = 1
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[commit]
	template = ~/.stCommitMsg
[credential]
	helper = osxkeychain
[mergetool]
	keepBackup = false
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = meld
	tool = kdiff3
	tool = kdiff3
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"
[mergetool "kdiff3"]
	path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
	trustExitCode = false
